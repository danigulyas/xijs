{
  "name": "xijs",
  "version": "0.0.1",
  "description": "A module for managing the Xi editor process, communication with it and the line cache.",
  "main": "index.js",
  "author": "Daniel Gulyas <hello@danielgulyas.me>",
  "license": "AGPL-3.0",
  "scripts": {
    "postinstall": "yarn run build-xi",
    "lint": "tslint -c tslint.json ./src/* ./test/*",
    "test": "mocha --require ts-node/register --watch-extensions ts \"./test/**/*.ts\"",
    "build": "yarn build-xi && yarn build-src && yarn build-docs",
    "build-xi": "bash ./postinstall.sh",
    "build-src": "tsc",
    "build-docs": "typedoc --out ./build/documentation ./src"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/execa": "^0.8.1",
    "@types/mocha": "^2.2.48",
    "@types/text-encoding": "^0.0.32",
    "chai": "^4.1.2",
    "mocha": "^5.0.4",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "execa": "^0.10.0",
    "lodash": "^4.17.5",
    "pino": "^4.14.0",
    "rxjs": "^5.5.7",
    "text-encoding": "^0.6.4"
  }
}
