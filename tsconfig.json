{
  "compilerOptions": {
    "outDir": "./build/js/index.js",
    "downlevelIteration": true,
    "sourceMap": true,
    "target": "esnext",
    "pretty": true,
    
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "declaration": true,
    "strict": true,

    "baseUrl": "./src/",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}