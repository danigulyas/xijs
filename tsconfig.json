{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./build/js/index.js",
    "downlevelIteration": true,
    "sourceMap": true,
    "target": "esnext",
    "pretty": true,
    
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "declaration": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}